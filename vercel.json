{
  "version": 2,
  "builds": [
    {
      "src": "api/visitors.js",
      "use": "@vercel/node"
    },
    {
      "src": "settings/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/visitors",
      "dest": "/api/visitors.js",
      "methods": ["GET", "POST", "OPTIONS"]
    },
    {
      "src": "/settings/(.*)",
      "dest": "/settings/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
